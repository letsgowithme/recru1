{% extends 'base.html.twig' %}

{% block title %}Edit User
{% endblock %}

{% block body %}
	<div class="container">
		<h1>Modifier le profil</h1>
		<div>
			{{ include('user/_delete_form.html.twig') }}
		</div>
		{% for message in app.flashes('warning') %}
			<div class="alert alert-warning mt-4">
				{{ message }}
			</div>
		{% endfor %}
{% if app.user %}

	{{ form_start(form) }}

			{% if user.roles[0] is same as 'ROLE_CANDIDATE' %}
			<div class="form-group" style="color: rgb(13, 108, 149); font-size: 1.4rem;">
				{{ form_label(form.firstname) }}
				{{ form_widget(form.firstname) }}
				<div class="form-error">
					{{ form_errors(form.firstname) }}
				</div>
			</div>
			<div class="form-group" style="color: rgb(13, 108, 149); font-size: 1.4rem;">
				{{ form_label(form.lastname) }}
				{{ form_widget(form.lastname) }}
				<div class="form-error">
					{{ form_errors(form.lastname) }}
				</div>
			</div>
			
			<div class="form-group mt-4" style="color: rgb(13, 108, 149); font-size: 1.4rem;">
				{{ form_label(form.cvFilename) }}
				{{ form_widget(form.cvFilename) }}
				<div class="form-error">
					{{ form_errors(form.cvFilename) }}
				</div>
			</div>
		{% endif %}

	{% if user.roles[0] is same as 'ROLE_RECRUITER' %}

			{# {{ form_start(form) }} #}
			<div class="form-group" style="color: rgb(13, 108, 149); font-size: 1.4rem;">
				{{ form_label(form.company) }}
				{{ form_widget(form.company) }}
				<div class="form-error">
					{{ form_errors(form.company) }}
				</div>
			</div>
			<div class="form-group" style="color: rgb(13, 108, 149); font-size: 1.4rem;">
				{{ form_label(form.location) }}
				{{ form_widget(form.location) }}
				<div class="form-error">
					{{ form_errors(form.location) }}
				</div>
			</div>			
		{% endif %}
    {{ form_end(form) }}
	</div>
  {% endif %}

  <br> <br> 
{% endblock %}

